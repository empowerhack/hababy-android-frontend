<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.robin.myapplication.HealthcareActivity"
    tools:showIn="@layout/activity_healthcare">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a midwife/specialised in OBGYN"
        android:id="@+id/button_specialist"
        android:height="90dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:onClick="specialistPerson"
        android:layout_above="@+id/button_normaldoctor"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a healthcare professional"
        android:id="@+id/button_normaldoctor"
        android:height="90dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:onClick="doctorPerson"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
