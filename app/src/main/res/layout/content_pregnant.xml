<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.robin.myapplication.PregnantActivity"
    tools:showIn="@layout/activity_pregnant">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Do you have any of the following symptoms/feelings:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView4"
        android:id="@+id/radioGroup">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have abdominal pain"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:textSize="18dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am bleeding"
        android:id="@+id/radioButton5"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am worried about baby movement"
        android:id="@+id/radioButton6"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:textSize="18dp"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I feel nausea/ vomiting"
        android:id="@+id/radioButton7"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:textSize="18dp"
        android:layout_below="@+id/radioButton6"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have leg cramps/pain"
        android:id="@+id/radioButton2"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:textSize="18dp"
        android:layout_below="@+id/radioButton7"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have headaches"
        android:id="@+id/radioButton3"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:textSize="18dp"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentStart="true" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="continue"
        android:id="@+id/button_continue"
        android:textColor="#ffffff"
        android:layout_marginBottom="61dp"
        android:width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/radioGroup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:id="@+id/button_cancel"
        android:textColor="#ffffff"
        android:width="150dp"
        android:layout_alignBottom="@+id/button_continue"
        android:layout_alignParentStart="true"
        android:onClick="showHomeScreen"/>


</RelativeLayout>
